<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.islam.ubclone.MapsActivity" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="2dp"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:padding="5dp"
            android:focusable="true"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="getLocation">
            <ImageView
                android:id="@+id/pickup_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/start_loc_small"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/pickup_text"
                android:layout_toEndOf="@+id/pickup_icon"
                android:layout_toRightOf="@+id/pickup_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick up" />
            <TextView
                android:id="@+id/pickup_value"
                android:layout_toRightOf="@+id/pickup_icon"
                android:layout_toEndOf="@+id/pickup_icon"
                android:layout_below="@+id/pickup_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click to choose"
                android:textSize="18sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sepGray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:focusable="true"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="getLocation">
            <ImageView
                android:id="@+id/destination_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/stop_loc_small"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/destination_text"
                android:layout_toEndOf="@+id/destination_icon"
                android:layout_toRightOf="@+id/destination_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Destination"
                />
            <TextView
                android:id="@+id/destination_value"
                android:layout_toRightOf="@+id/destination_icon"
                android:layout_toEndOf="@+id/destination_icon"
                android:layout_below="@+id/destination_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click to choose"
                android:textSize="18sp"
                />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>
